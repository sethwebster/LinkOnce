@model LinkOnce.Models.Link
@{
    if (string.IsNullOrEmpty(ViewBag.Title))
    {
        ViewBag.Title = "Home Page";
    }
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
            <p>
                @* To learn more about ASP.NET MVC visit
                <a href="http://asp.net/mvc" title="ASP.NET MVC Website">http://asp.net/mvc</a>.
                The page features <mark>videos, tutorials, and samples</mark> to help you get the most from ASP.NET MVC.
                If you have any questions about ASP.NET MVC visit
                <a href="http://forums.asp.net/1146.aspx/1?MVC" title="ASP.NET MVC Forum">our forums</a>.*@
            </p>
        </div>
    </section>
}
@using (Html.BeginForm())
{
    <h3>Create your link</h3>
    @Html.ValidationSummary()
    <div class="error">@ViewBag.Error</div>
    <ol class="round">
        <li class="one">
            <h5>Destination</h5>
            Where is the content you want to serve?<br />
            @Html.TextBoxFor(a => a.Destination)
            @Html.ValidationMessageFor(a => a.Destination,"*")
            
        </li>

        <li class="two">
            <h5>Do you want to be notified when this content is retrieved?</h5>
            (optional) An email address where we may notify you<br />
            @Html.TextBoxFor(a => a.OptionalEmailAddress)
            @Html.ValidationMessageFor(a => a.OptionalEmailAddress,"*")
        </li>

        <li class="three">
            <button type="submit">Create</button>
            Remember: This link will work only once, so <em>no testing :)</em>.<br />
        </li>
    </ol>
}